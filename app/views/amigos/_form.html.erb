        </div>
      </div>
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :tel %><br>
          <%= f.text_field :tel, class: 'form-control' %>
        </div>
      </div>
    </div>


  <%= f.fields_for :endereco do |ff| %>
        <div class="field">
          <%= ff.label :lagradouro %><br>
