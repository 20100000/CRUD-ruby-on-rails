<p id="notice"><%= notice %></p>

<h1>Amigos</h1>
<hr>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Endereco</th>
      <th>Email</th>
      <th>Tel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amigos.each do |amigo| %>
      <tr>
        <td><%= amigo.name %></td>
        <td><%= amigo.endereco %></td>
        <td><%= amigo.email %></td>
        <td><%= amigo.tel %></td>
        <td width="30"><%= link_to raw('<i class="fa fa-eye"></i>'), amigo, class: "btn btn-info btn-sm" %></td>
        <td width="30"><%= link_to raw('<i class="fa fa-pencil"></i>'), edit_amigo_path(amigo), class: "btn btn-warning btn-sm" %></td>
        <td width="30"><%= link_to raw('<i class="fa fa-minus-circle"></i>'), amigo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Amigo', new_amigo_path, class: "btn btn-primary" %>
